<?xml version="1.0" encoding="UTF-8"?>

<Module>


<ModulePrefs title="RevelDigital Alert Gadget" background="transparent" author="RevelDigital" description="Custom Alert Gadget">

<UserPref required="true" datatype="hidden" display_name="width" name="rdW"/>

<UserPref required="true" datatype="hidden" display_name="height" name="rdH"/>

<UserPref required="true" datatype="string" display_name="Text" name="text"/>

<UserPref required="true" datatype="style" display_name="Text Style" name="text-style" default_value="font-family:Verdana;color:#000000;font-size:24px;"/>

<UserPref required="false" datatype="color" display_name="Background Color" name="BackgroundColor" default_value=""/>



</ModulePrefs>


<Content type="html">

<![CDATA[

            <style type="text/css">

                body *
                {
                    letter-spacing:0;
		    margin: 0;
		    padding: 0;
                }

                body
                {
                    background:transparent;
                    width: __UP_rdW__px;
                    height: __UP_rdH__px;
                    overflow: hidden;
                }

                
               
            </style>


            <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
            <link rel="stylesheet" href="styles.3bb2a9d4949b7dc120a9.css">

            <script src="https://reveldigital.github.io/gadget-common/utils.js" type="text/javascript"></script>
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
            <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.5.18/webfont.js"></script>
            <script type="text/javascript" src="Sources/runtime.ec2944dd8b20ec099bf3.js"></script>
            <script type="text/javascript" src="Sources/polyfills.c6871e56cb80756a5498.js"></script>
            <script type="text/javascript" src="Sources/main.0ae614cae58d7746c3b7.js"></script>
            <div>
                <app-root></app-root>
            </div>

            <script type="text/javascript">

                var prefs = new gadgets.Prefs();

                function load() {
                    WebFont.load({
                        google: {
                            families: [
                            RevelDigital.getFamilyName(prefs.getString("text-style"))
                            ]
                        }
                    });
                }

               
                gadgets.util.registerOnLoadHandler(load);

            </script>
        ]]>
</Content>

</Module>